---
import Layout from "./Layout.astro";
import { ChefHat } from "lucide-react";

export interface Props {
  title?: string;
  showRegisterLink?: boolean;
  showLoginLink?: boolean;
}

const { title = "AI RecipeKeeper", showRegisterLink = false, showLoginLink = false } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen bg-background flex flex-col">
    <!-- Header -->
    <header class="py-6 px-4">
      <div class="container mx-auto max-w-md">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-3 group hover:opacity-80 transition-opacity">
            <div class="relative">
              <div
                class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center shadow-lg group-hover:scale-105 transition-transform"
              >
                <ChefHat className="w-6 h-6 text-primary-foreground" />
              </div>
              <div class="absolute inset-0 w-10 h-10 bg-primary/20 rounded-xl blur-md -z-10"></div>
            </div>
            <div>
              <h1 class="text-xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
                RecipeKeeper
              </h1>
              <p class="text-xs text-muted-foreground font-medium mt-0.5">Twoja kulinarna baza wiedzy</p>
            </div>
          </a>

          <!-- Navigation Links -->
          <div class="text-sm">
            {
              showRegisterLink && (
                <span class="text-muted-foreground">
                  Nie masz konta?{" "}
                  <a href="/auth/register" class="text-primary hover:underline font-medium">
                    Zarejestruj się
                  </a>
                </span>
              )
            }
            {
              showLoginLink && (
                <span class="text-muted-foreground">
                  Masz konto?{" "}
                  <a href="/auth/login" class="text-primary hover:underline font-medium">
                    Zaloguj się
                  </a>
                </span>
              )
            }
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 flex items-center justify-center px-4 py-8">
      <div class="w-full max-w-md">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="py-6 px-4 text-center">
      <p class="text-sm text-muted-foreground">© 2025 AI RecipeKeeper. Wszystkie prawa zastrzeżone.</p>
    </footer>
  </div>
</Layout>

<style>
  /* Dodatkowe style dla autentykacji */
  main {
    background:
      radial-gradient(circle at 25% 25%, hsl(var(--primary) / 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, hsl(var(--secondary) / 0.1) 0%, transparent 50%);
  }
</style>
