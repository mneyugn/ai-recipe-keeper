---
import AppLayout from "../../../layouts/AppLayout.astro";
import type { RecipeDetailDTO, ErrorResponseDTO } from "../../../types";

export const prerender = false;

// Pobieranie ID z parametrów URL
const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/recipes");
}

// Pobieranie szczegółów przepisu
let recipe: RecipeDetailDTO | null = null;
let error: string | null = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/recipes/${id}`);

  if (response.ok) {
    recipe = await response.json();
  } else {
    const errorData: ErrorResponseDTO = await response.json();
    error = errorData.error.message;

    if (response.status === 404) {
      return Astro.redirect("/recipes");
    }
  }
} catch (e) {
  console.error("Błąd podczas pobierania przepisu:", e);
  error = "Błąd podczas ładowania przepisu";
}
---

<AppLayout title={recipe?.name ? `${recipe.name} - AI RecipeKeeper` : "Przepis - AI RecipeKeeper"}>
  {/* Nagłówek z nawigacją */}
  <header class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 -mx-4 lg:-mx-6">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex items-center justify-between">
        <a
          href="/recipes"
          class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Powrót do listy przepisów
        </a>

        {
          recipe && (
            <a
              href={`/recipes/${recipe.id}/edit`}
              class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-colors"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                />
              </svg>
              Edytuj przepis
            </a>
          )
        }
      </nav>
    </div>
  </header>

  <main class="max-w-4xl mx-auto py-8">
    {
      error ? (
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
            <h3 class="text-lg font-medium text-red-800 dark:text-red-200">Błąd</h3>
          </div>
          <p class="mt-2 text-red-700 dark:text-red-300">{error}</p>
        </div>
      ) : recipe ? (
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
          {/* Zdjęcie przepisu */}
          {recipe.image_url && (
            <div class="aspect-w-16 aspect-h-9 bg-gray-200 dark:bg-gray-700">
              <img src={recipe.image_url} alt={recipe.name} class="w-full h-64 object-cover" loading="lazy" />
            </div>
          )}

          <div class="p-6 sm:p-8">
            {/* Nagłówek przepisu */}
            <header class="mb-6">
              <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">{recipe.name}</h1>

              {/* Metadane */}
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                {recipe.preparation_time && (
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    {recipe.preparation_time}
                  </div>
                )}

                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  {new Date(recipe.created_at).toLocaleDateString("pl-PL")}
                </div>
              </div>

              {/* Tagi */}
              {recipe.tags.length > 0 && (
                <div class="mt-4">
                  <div class="flex flex-wrap gap-2">
                    {recipe.tags.map((tag) => (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                        {tag.name}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </header>

            {/* Składniki */}
            <section class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Składniki</h2>
              <ul class="space-y-2">
                {recipe.ingredients.map((ingredient) => (
                  <li class="flex items-start text-gray-700 dark:text-gray-300">
                    <span class="inline-block w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3 flex-shrink-0" />
                    {ingredient}
                  </li>
                ))}
              </ul>
            </section>

            {/* Kroki przygotowania */}
            <section class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Sposób przygotowania</h2>
              <ol class="space-y-4">
                {recipe.steps.map((step, index) => (
                  <li class="flex items-start text-gray-700 dark:text-gray-300">
                    <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-500 text-white text-sm font-medium rounded-full mr-4 flex-shrink-0 mt-0.5">
                      {index + 1}
                    </span>
                    <div class="flex-1">{step}</div>
                  </li>
                ))}
              </ol>
            </section>

            {/* Notatki */}
            {recipe.notes && (
              <section class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Notatki</h2>
                <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
                  <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">{recipe.notes}</p>
                </div>
              </section>
            )}

            {/* Źródło */}
            {recipe.source_url && (
              <section>
                <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Źródło</h2>
                <a
                  href={recipe.source_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors"
                >
                  {recipe.source_url}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              </section>
            )}
          </div>
        </article>
      ) : (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-8 text-center">
          <div class="animate-pulse">
            <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-1/4 mx-auto mb-4" />
            <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-1/2 mx-auto" />
          </div>
        </div>
      )
    }
  </main>
</AppLayout>
